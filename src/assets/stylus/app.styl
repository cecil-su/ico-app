/* Views */
/* Modules */
/* Commons */
*,:after,:before 
  box-sizing border-box
html,body
  h()
.app 
  b-c(#ebebeb)
  font-size 14px
  min-height 100%
  // padding-bottom _footer-h
  pos(relative)
a 
  cursor pointer
  text-decoration none
ul 
  list-style none
  -webkit-margin-before 0
  -webkit-margin-after 0
  -webkit-padding-start 0
  margin 0
p 
  margin 0
  -webkit-margin-before 0
  -webkit-margin-after 0








